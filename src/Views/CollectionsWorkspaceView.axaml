<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvalonHttp.ViewModels"
             xmlns:lucide="clr-namespace:LucideAvalonia;assembly=LucideAvalonia"
             xmlns:controls="clr-namespace:AvalonHttp.Controls"
             xmlns:behaviors="clr-namespace:AvalonHttp.Behaviors"
             xmlns:components="using:AvalonHttp.Views.Components"
             x:Class="AvalonHttp.Views.CollectionsWorkspaceView"
             x:DataType="vm:CollectionWorkspaceViewModel">

    <Interaction.Behaviors>
        <behaviors:ClearFocusOnClickBehavior />
    </Interaction.Behaviors>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="200" MaxWidth="400" /> 
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" MinWidth="400" />
        </Grid.ColumnDefinitions>

        <!-- ============================= -->
        <!-- COLLECTIONS SIDEBAR           -->
        <!-- ============================= -->
        <components:CollectionsSidebarView Grid.Column="0"
                                           DataContext="{Binding CollectionsViewModel}" />

        <!-- ============================= -->
        <!-- SPLITTER                      -->
        <!-- ============================= -->
        <GridSplitter Grid.Column="1"
                      Width="5"
                      Background="{DynamicResource BorderColor}"
                      ResizeDirection="Columns"
                      ResizeBehavior="PreviousAndNext" />

        <!-- ============================= -->
        <!-- MAIN CONTENT AREA             -->
        <!-- ============================= -->
        <components:RequestEditorView Grid.Column="2" 
                                      DataContext="{Binding}" />
    </Grid>
</UserControl>